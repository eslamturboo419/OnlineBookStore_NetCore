@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Catalogue";
}

 <div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.Title
                    </div>
                    <div class="card-body">
                        <img src="~/images/@item.Imgfile" height="150" /> <br/>
                        price:@item.Price
                    </div>
                    <div class="card-footer">
                         <a asp-controller="Order" asp-action="Create" asp-route-id="@item.Id">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
 
